---
import Drawer from "./Header/Drawer.astro";
import Theme from "./Header/Theme.astro";
---

<div class="navbar rounded-sm">
  <Drawer />
  <div class="flex-1">
    <h1 class="font-bold"><a class="btn btn-ghost text-xl">ketikan.adi</a></h1>
  </div>

  <div class="flex-none gap-2">
    <Theme />
    <div class="dropdown dropdown-bottom dropdown-end hidden md:flex">
      <div tabindex="0" role="button" class="btn m-1">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          class="inline-block h-5 w-5 stroke-current"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M5 12h.01M12 12h.01M19 12h.01M6 12a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0zm7 0a1 1 0 11-2 0 1 1 0 012 0z"
          ></path>
        </svg>
      </div>
      <ul
        tabindex="0"
        class="dropdown-content menu bg-base-100 rounded-box z-[1] w-52 p-2 shadow"
      >
        <li><a>Blogs</a></li>
        <li><a>About</a></li>
        <li><a>Categories</a></li>
      </ul>
    </div>
  </div>
</div>
